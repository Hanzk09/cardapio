generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String
  password  String
  phone     String?
  birthdate DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  editedProducts  Product[] @relation("userEdited")
  createdProducts Product[] @relation("userCreated")

  @@map("usuarios")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Decimal
  image       String
  publishedAt DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  idUserCreated Int
  userCreated   User @relation("userCreated", fields: [idUserCreated], references: [id])

  idUserEdited Int
  userEdited   User @relation("userEdited", fields: [idUserEdited], references: [id])

  @@map("products")
}
